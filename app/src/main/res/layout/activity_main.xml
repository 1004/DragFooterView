<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.fangxu.library.DragContainer
        android:id="@+id/drag_container"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:dc_orientation="RIGHT"
        app:dc_icon_drawable="@drawable/left"
        app:dc_icon_size="10dp"
        app:dc_text_normal="释放查看"
        app:dc_text_event="查看更多"
        android:layout_centerInParent="true"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#999999"
            android:gravity="center"
            android:text="MainView"/>

    </com.fangxu.library.DragContainer>

</RelativeLayout>